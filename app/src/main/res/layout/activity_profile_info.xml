<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="teknopar.com.healthmining.ui.ProfileInfo">

    <ListView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/profile_info_list">
    </ListView>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/pi_saveButton_bgColor"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/pi_saveButton_textColor"
        android:text="@string/pi_button_saveMyProfileInfo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/activity_text_color"
        android:text="@string/pi_text_disclaimerInfo"/>
</LinearLayout>